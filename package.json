{
  "name": "drawio2go",
  "version": "1.0.0",
  "description": "Electron + Next.js DrawIO Application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "eslint . && npx tsc --noEmit",
    "electron": "electron .",
    "electron:dev": "concurrently \"pnpm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "pnpm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "nextjs",
    "drawio",
    "heroui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/deepseek": "^1.0.26",
    "@ai-sdk/openai": "^2.0.59",
    "@ai-sdk/openai-compatible": "^1.0.25",
    "@ai-sdk/react": "^2.0.86",
    "@heroui/react": "3.0.0-alpha.35",
    "@heroui/styles": "3.0.0-alpha.35",
    "@tailwindcss/postcss": "^4.1.16",
    "@xmldom/xmldom": "^0.8.11",
    "ai": "^5.0.86",
    "electron-store": "^11.0.2",
    "next": "^15.5.6",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-drawio": "^1.0.7",
    "react-markdown": "^10.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.16",
    "uuid": "^11.0.6",
    "xpath": "^0.0.34",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^20.19.24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^10.0.0",
    "@types/xmldom": "^0.1.34",
    "concurrently": "^8.2.2",
    "electron": "^38.5.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.0",
    "eslint-config-next": "^15.5.6",
    "typescript": "^5.9.3",
    "wait-on": "^7.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "build": {
    "appId": "com.drawio2go.app",
    "productName": "DrawIO2Go",
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
