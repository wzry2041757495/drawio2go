{
  "name": "drawio2go",
  "version": "1.0.0",
  "description": "Electron + Next.js DrawIO Application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "eslint . && npx tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --write .",
    "electron": "electron .",
    "electron:dev": "concurrently \"pnpm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "pnpm run build && electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "nextjs",
    "drawio",
    "heroui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/deepseek": "^1.0.28",
    "@ai-sdk/openai": "^2.0.68",
    "@ai-sdk/openai-compatible": "^1.0.27",
    "@ai-sdk/react": "^2.0.93",
    "@heroui/react": "3.0.0-beta.1",
    "@heroui/styles": "3.0.0-beta.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-virtual": "^3.13.12",
    "@xmldom/xmldom": "^0.8.11",
    "ai": "^5.0.93",
    "better-sqlite3": "^12.4.1",
    "diff-match-patch": "^1.0.5",
    "electron-store": "^11.0.2",
    "idb": "^8.0.3",
    "lucide-react": "^0.553.0",
    "next": "^15.5.6",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-drawio": "^1.0.7",
    "react-markdown": "^10.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.17",
    "uuid": "^11.1.0",
    "xpath": "^0.0.34",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/diff-match-patch": "^1.0.36",
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@types/xmldom": "^0.1.34",
    "concurrently": "^8.2.2",
    "electron": "^38.7.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9",
    "wait-on": "^7.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ],
    "ignoredBuiltDependencies": [
      "electron",
      "esbuild",
      "sharp"
    ]
  },
  "build": {
    "appId": "com.drawio2go.app",
    "productName": "DrawIO2Go",
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "node_modules/better-sqlite3/build/Release",
        "to": "."
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  }
}
